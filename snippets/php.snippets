snippet php
	<?php
	${1}
	?>
snippet pec
	echo "${1:string}"${2};
snippet pinc
	include '${1:file}';${2}
snippet pinc1
	include_once '${1:file}';${2}
snippet preq
	require '${1:file}';${2}
snippet preq1
	require_once '${1:file}';${2}
# $GLOBALS['...']
snippet pglobals
	$GLOBALS['${1:variable}']${2: = }${3:'something'}${4:;}${5}
snippet pcookie 
	$_COOKIE['${1:variable}']${2:;}${3}
snippet pcookie= 
	$_COOKIE['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet penv 
	$_ENV['${1:variable}']${2:;}${3}
snippet penv= 
	$_ENV['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet pfiles 
	$_FILES['${1:variable}']${2:;}${3}
snippet pfiles= 
	$_FILES['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet pget 
	$_GET['${1:variable}']${2:;}${3}
snippet pget= 
	$_GET['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet ppost 
	$_POST['${1:variable}']${2:;}${3}
snippet ppost= 
	$_POST['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet preq 
	$_REQUEST['${1:variable}']${2:;}${3}
snippet preq= 
	$_REQUEST['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet pser 
	$_SERVER['${1:variable}']${2:;}${3}
snippet pser= 
	$_SERVER['${1:variable}']${2: = }${3:''}${4:;}${5}
snippet psess 
